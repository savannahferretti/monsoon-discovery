{
  "filepaths":{
    "raw":"/global/cfs/cdirs/m4334/sferrett/monsoon-discovery/data/raw",
    "interim":"/global/cfs/cdirs/m4334/sferrett/monsoon-discovery/data/interim",
    "splits":"/global/cfs/cdirs/m4334/sferrett/monsoon-discovery/data/splits",
    "predictions":"/global/cfs/cdirs/m4334/sferrett/monsoon-discovery/data/predictions",
    "features":"/global/cfs/cdirs/m4334/sferrett/monsoon-discovery/data/features",
    "weights":"/global/cfs/cdirs/m4334/sferrett/monsoon-discovery/data/weights",
    "models":"/global/cfs/cdirs/m4334/sferrett/monsoon-discovery/models"
  },
  "metadata":{
    "author":"Savannah L. Ferretti",
    "email":"savannah.ferretti@uci.edu"
  },
  "domain":{
    "latrange":[5.0,25.0],
    "lonrange":[60.0,90.0],
    "levrange":[500.0,1000.0],
    "years":[2000,2001,2002,2003,2004,2005,2006,2007,2008,2009,2010,2011,2012,2013,2014,2015,2016,2017,2018,2019,2020],
    "months":[6,7,8]
  },
  "splits":{
    "trainyears":[2000,2014],
    "validyears":[2015,2017],
    "testyears":[2018,2020]
  },
  "variables":{
    "field":["rh","thetae","thetaestar"],
    "local":["lf","lhf","shf"],
    "target":"pr"
  },
  "experiments":{
    "pod":{
      "bins":{"min":-0.6,"max":0.1,"width":0.001,"minsample":50},
      "fit":{"prmin":1.0,"prmax":5.0},
      "landthresh":0.5,
      "runs":{
        "pooled":  {"mode":"pooled"},
        "regional":{"mode":"regional"}
      }
    },
    "nn":{
      "projectname":"Chapter 3 Experiments",
      "seeds":[42,72,102],
      "workers":8,
      "epochs":20,
      "batchsize":500,
      "learningrate":0.0005,
      "patience":4,
      "criterion":"MSELoss",
      "runs":{
        "bl-baseline":             {"kind":"baseline",      "fieldvars":["bl"]},
        "cape-baseline":           {"kind":"baseline",      "fieldvars":["cape","subsat"]},
        "thetaeprime-baseline":    {"kind":"baseline",      "fieldvars":["thetaeprime"]},
        "thetaeprime-nonparam":    {"kind":"nonparametric", "fieldvars":["thetaeprime"]},
        "thetaeprime-param":       {"kind":"parametric",    "fieldvars":["thetaeprime"],    "kernel":"gaussian"},
        "thetaeplus-baseline":     {"kind":"baseline",      "fieldvars":["thetaeplus"]},
        "thetaeplus-nonparam":     {"kind":"nonparametric", "fieldvars":["thetaeplus"]},
        "thetaeplus-param":        {"kind":"parametric",    "fieldvars":["thetaeplus"],     "kernel":"gaussian"},
        "thetaecombined-baseline": {"kind":"baseline",      "fieldvars":["thetaeprime","thetaeplus"]},
        "thetaecombined-nonparam": {"kind":"nonparametric", "fieldvars":["thetaeprime","thetaeplus"]},
        "thetaecombined-param":    {"kind":"parametric",    "fieldvars":["thetaeprime","thetaeplus"],"kernel":"gaussian"},
        "tq-baseline":             {"kind":"baseline",      "fieldvars":["t","q"]},
        "tq-nonparam":             {"kind":"nonparametric", "fieldvars":["t","q"]},
        "tq-param":                {"kind":"parametric",    "fieldvars":["t","q"],          "kernel":"gaussian"}
      }
    },
    "sr":{
      "runs":{
        "bl-sr":                     {"fieldvars":["bl"]},
        "cape-sr":                   {"fieldvars":["cape","subsat"]},
        "thetaeprime-nonparam-sr":   {"fieldvars":["thetaeprime"],              "features_from":"thetaeprime-nonparam"},
        "thetaeprime-param-sr":      {"fieldvars":["thetaeprime"],              "features_from":"thetaeprime-param"},
        "thetaeplus-nonparam-sr":    {"fieldvars":["thetaeplus"],               "features_from":"thetaeplus-nonparam"},
        "thetaeplus-param-sr":       {"fieldvars":["thetaeplus"],               "features_from":"thetaeplus-param"},
        "thetaecombined-nonparam-sr":{"fieldvars":["thetaeprime","thetaeplus"], "features_from":"thetaecombined-nonparam"},
        "thetaecombined-param-sr":   {"fieldvars":["thetaeprime","thetaeplus"], "features_from":"thetaecombined-param"},
        "tq-nonparam-sr":            {"fieldvars":["t","q"],                    "features_from":"tq-nonparam"},
        "tq-param-sr":               {"fieldvars":["t","q"],                    "features_from":"tq-param"}
      }
    }
  }
}
